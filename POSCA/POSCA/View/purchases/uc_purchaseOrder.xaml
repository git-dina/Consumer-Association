                        <DataGridTextColumn IsReadOnly="True" Width="*"  Header="CoopDiscount" Binding="{Binding Path=CoopDiscount, Mode=TwoWay}"/>
                        <DataGridTextColumn IsReadOnly="True" Width="*"  Header="ConsumerDiscount" Binding="{Binding Path=ConsumerDiscount, Mode=TwoWay}"/>

                    </DataGrid.Columns>
