                        </Grid>
                    </Border>
                    <Border Grid.Row="3" CornerRadius="0" Margin="10,5,10,5"   BorderThickness="0 0 0 1" BorderBrush="{StaticResource Grey}">
                        <Grid   >
                            <DatePicker  x:Name="dp_OrderRecieveDate" 
                                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                         BorderBrush="#737373"   BorderThickness="0" Margin="0 0 0 -1"
                                        TextBlock.Foreground="#4E4E4E"
                                         SelectedDate="{Binding OrderRecieveDate, Mode=TwoWay}" Padding="10,0,5,0"  
                                        materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
