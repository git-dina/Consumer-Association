                          Color="Gray"
                          Opacity="0.3"
                         BlurRadius="10"/>
            </Border.Effect>
            <Grid   Margin="0 0 0 0"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
