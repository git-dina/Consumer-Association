                            </Grid>
                        </Border>
                        <Border Grid.Row="8" CornerRadius="0" Margin="10,5,10,5"   BorderThickness="0 0 0 1" BorderBrush="{StaticResource Grey}">
                            <Grid   >
                                <TextBox x:Name="tb_PhoneNumber" Grid.Row="8"  Padding="10,0,5,0"  
