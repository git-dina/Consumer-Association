                            <Path Fill="{StaticResource SecondColor}" Stretch="Fill" 
                         Width="25" Height="25" 
                              Data="{StaticResource twoWayArrow}"/>
                        </Button>
                    </StackPanel >
                </Border>
            </Grid>
        </Border>
