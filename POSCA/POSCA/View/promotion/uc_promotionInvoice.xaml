                        <DataGridCheckBoxColumn Header="IsItemStoped" x:Name="col_IsItemStoped" Binding="{Binding IsItemStoped, Mode=TwoWay}">
                            <DataGridCheckBoxColumn.CellStyle>
                                <Style TargetType="{x:Type DataGridCell}">
