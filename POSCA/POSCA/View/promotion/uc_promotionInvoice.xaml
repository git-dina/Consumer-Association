                    CornerRadius="7" BorderBrush="Black" Background="White" Padding="0" Margin="5">
            <Border.Effect>
                <DropShadowEffect
                          ShadowDepth="1"
                          Direction="360"
                          Color="Gray"
                          Opacity="0.3"
                         BlurRadius="10"/>
            </Border.Effect>
